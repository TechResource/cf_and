<resources>

    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/blue_bg</item>
        <item name="colorPrimaryDark">@color/blue_color</item>
        <item name="colorAccent">@android:color/black</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="BaseTheme.AppTheme" >
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="android:windowBackground">@drawable/cf_bg</item>
    </style>
    <style name="BaseTheme.AppThemeTranslucentBg" >
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="SeparatorHorizontal">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/separator_color</item>
    </style>
    <style name="SeparatorVertical">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/separator_color</item>
    </style>
    <style name="TextButtonStyle" parent="android:Widget.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@null</item>
        <item name="android:textStyle">bold</item>
    </style>



    <style name="Base"></style>

    <style name="Base.BlueButton" parent="android:Widget.Button">
        <item name="android:background">@drawable/blue_button_drawable</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Menu"></style>

    <style name="Menu.Button">
        <item name="android:background">@drawable/menu_button_drawable</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/gray_text_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:paddingLeft">60dp</item>
    </style>

    <style name="Base.SectionHeader">
        <item name="android:paddingBottom">@dimen/margin_small</item>
        <item name="android:paddingLeft">@dimen/margin_normal</item>
        <item name="android:paddingRight">@dimen/margin_normal</item>
        <item name="android:paddingTop">@dimen/margin_large</item>
        <item name="android:background">@color/gray</item>
        <item name="android:textColor">@color/gray_dark</item>
        <item name="android:gravity">bottom</item>
    </style>

    <style name="Base.Input">
        <item name="android:paddingTop">@dimen/margin_small</item>
    </style>

    <style name="Base.Spinner">
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>
    <style name="Base.Input.ET">
        <item name="android:background">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingLeft">@dimen/margin_normal</item>
        <item name="android:paddingRight">@dimen/margin_normal</item>
        <item name="android:paddingBottom">@dimen/margin_small</item>
        <item name="android:paddingTop">0dp</item>
    </style>
    <style name="Base.Select">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:drawableRight">@drawable/ic_selectable</item>
        <item name="android:padding">@dimen/margin_normal</item>
        <item name="android:gravity">left</item>
    </style>
    <style name="Base.CheckBox">
        <item name="android:background">@color/gray</item>
        <item name="android:paddingLeft">@dimen/margin_normal</item>
        <item name="android:paddingRight">@dimen/margin_normal</item>
        <item name="android:paddingTop">@dimen/margin_large</item>
        <item name="android:paddingBottom">@dimen/margin_large</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/gray_dark</item>
    </style>
    <style name="Base.StatusLabel">
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="MyAlertTitleTextStyle">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BlueAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowTitleStyle">@style/MyAlertTitleTextStyle</item>
        <item name="colorAccent">@color/blue_bg</item>
    </style>

    <style name="TextInputTextSizeLargeStyle" parent="TextAppearance.Design.Hint" >
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>
</resources>
