<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Inspection"></style>
    <style name="Inspection.SectionHeader">
        <item name="android:paddingBottom">@dimen/margin_small</item>
        <item name="android:paddingLeft">@dimen/margin_normal</item>
        <item name="android:paddingRight">@dimen/margin_normal</item>
        <item name="android:paddingTop">@dimen/margin_large</item>
        <item name="android:background">@color/gray</item>
        <item name="android:textColor">@color/gray_dark</item>
        <item name="android:gravity">bottom</item>
    </style>

    <style name="Inspection.Input">
        <item name="android:paddingTop">@dimen/margin_small</item>
    </style>

    <style name="Inspection.Spinner">
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>
    <style name="Inspection.Input.ET">
        <item name="android:background">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingLeft">@dimen/margin_normal</item>
        <item name="android:paddingRight">@dimen/margin_normal</item>
        <item name="android:paddingBottom">@dimen/margin_small</item>
        <item name="android:paddingTop">0dp</item>
    </style>
    <style name="Inspection.Select">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:drawableRight">@drawable/ic_selectable</item>
        <item name="android:padding">@dimen/margin_normal</item>
        <item name="android:gravity">left</item>
    </style>
    <style name="Inspection.CheckBox">
        <item name="android:background">@color/gray</item>
        <item name="android:paddingLeft">@dimen/margin_normal</item>
        <item name="android:paddingRight">@dimen/margin_normal</item>
        <item name="android:paddingTop">@dimen/margin_large</item>
        <item name="android:paddingBottom">@dimen/margin_large</item>
    </style>
    <style name="SpinnerStyle" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:background">?selectableItemBackground</item>
    </style>
</resources>