<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <ImageView
        android:id="@+id/squashedFrogImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/squashed_frog_exterior"
        android:layout_centerInParent="true"
        android:scaleType="fitCenter"
        />

    <flightpath.com.inspectionmodule.squashedFrog.SquashedFrogPanelView
        android:id="@+id/squashedFrogPanel"
        android:layout_alignTop="@+id/squashedFrogImage"
        android:layout_alignBottom="@+id/squashedFrogImage"
        android:layout_alignLeft="@+id/squashedFrogImage"
        android:layout_alignRight="@+id/squashedFrogImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>