<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:divider="@drawable/inspection_divider"
    android:showDividers="middle"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <com.flightpathcore.widgets.InputWidget_
            android:id="@+id/damageDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:hint="@string/description_label"
            app:is_required="true"
            >
        </com.flightpathcore.widgets.InputWidget_>

        <Button
            style="@style/Base.BlueButton"
            android:id="@+id/deleteBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/delete_label"
            />
    </LinearLayout>

    <GridView
        android:id="@+id/damagesContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:numColumns="2"
        android:verticalSpacing="@dimen/margin_normal"
        android:horizontalSpacing="@dimen/margin_normal"
        />
    <Button
        style="@style/Base.BlueButton"
        android:id="@+id/takePhoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_photo_text"
        android:textSize="@dimen/text_size_extra_large"
        android:padding="@dimen/margin_normal"
        />
</LinearLayout>